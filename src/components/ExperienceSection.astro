---
import type { HTMLAttributes } from "astro/types"
import { SOCIALS } from "../data/config"
import FancyButton from "./FancyButton.astro"

const cv = SOCIALS.filter((x) => x.label === "ReadCV")
	.map(({ href }) => href)
	.toString()

interface Props extends HTMLAttributes<"section"> {}

const { ...attrs } = Astro.props as Props
---

<section aria-labelledby="#experience" {...attrs}>
	<h2 id="experience" class="mb-8 font-medium">Experience</h2>
	<div class="mb-6 flex flex-col gap-1 md:flex-row md:gap-9">
		<span class="shrink-0 text-xs text-gray-500 dark:text-gray-400 md:w-40 md:text-base">???</span>
		<div class="flex-grow">
			<ul role="list" class="flex flex-col gap-4">
				<li class="flex w-full items-center gap-x-1">
					<span>Seeking new career opportunities</span>
					<div
						aria-hidden="true"
						class="h-px flex-grow bg-gradient-to-r from-gray-300 via-gray-300 to-gray-50 dark:from-white/10 dark:via-white/10 dark:to-gray-1000"
					>
					</div>
					<div class="flex items-center gap-x-[6px] text-gray-500 dark:text-gray-400">
						<div
							aria-hidden="true"
							class="aspect-square w-1 animate-pulse rounded-full bg-emerald-500"
						>
						</div>
						Now
					</div>
				</li>
			</ul>
		</div>
	</div>
	<div class="flex flex-col gap-1 md:flex-row md:gap-9">
		<span class="shrink-0 text-xs text-gray-500 dark:text-gray-400 md:w-40 md:text-base"
			>ProSource</span
		>
		<div class="flex-grow">
			<ul role="list" class="mb-8 flex flex-col gap-4">
				<li class="flex w-full items-center gap-x-1">
					<span>Product Designer</span>
					<div
						aria-hidden="true"
						class="h-px flex-grow bg-gradient-to-r from-gray-300 via-gray-300 to-gray-50 dark:from-white/10 dark:via-white/10 dark:to-gray-1000"
					>
					</div>
					<span class="text-gray-500 dark:text-gray-400">Oct 2020&ndash;Present</span>
				</li>
				<li class="flex w-full items-center gap-x-1">
					<span>IT Coordinator</span>
					<div
						aria-hidden="true"
						class="h-px flex-grow bg-gradient-to-r from-gray-300 via-gray-300 to-gray-50 dark:from-white/10 dark:via-white/10 dark:to-gray-1000"
					>
					</div>
					<span class="text-gray-500 dark:text-gray-400">May 2016&ndash;Oct 2020</span>
				</li>
				<li class="flex w-full items-center gap-x-1">
					<span>Intern</span>
					<div
						aria-hidden="true"
						class="h-px flex-grow bg-gradient-to-r from-gray-300 via-gray-300 to-gray-50 dark:from-white/10 dark:via-white/10 dark:to-gray-1000"
					>
					</div>
					<span class="text-gray-500 dark:text-gray-400">Dec 2014&ndash;Dec 2015</span>
				</li>
			</ul>
			<FancyButton href={cv} class="!block sm:!inline-block">Read my résumé</FancyButton>
		</div>
	</div>
</section>
