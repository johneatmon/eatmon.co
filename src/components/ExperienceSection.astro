---
import type { HTMLAttributes } from "astro/types"
import { SOCIALS } from "../data/config"
import FancyButton from "./FancyButton.astro"

const cv = SOCIALS.filter((x) => x.label === "ReadCV")
	.map(({ href }) => href)
	.toString()

interface Props extends HTMLAttributes<"section"> {}

const { ...attrs } = Astro.props as Props
---

<section aria-labelledby="#experience" {...attrs}>
	<h2 id="experience" class="font-medium mb-8">Experience</h2>
	<div class="flex flex-col md:flex-row gap-1 md:gap-9 mb-6">
		<span class="text-gray-500 dark:text-gray-400 md:w-40 shrink-0 text-xs md:text-base">???</span>
		<div class="flex-grow">
			<ul role="list" class="flex flex-col gap-4">
				<li class="flex w-full gap-x-1 items-center">
					<span>Seeking new career opportunities</span>
					<div
						aria-hidden="true"
						class="h-px flex-grow bg-gradient-to-r from-gray-300 via-gray-300 to-gray-50 dark:from-white/10 dark:via-white/10 dark:to-gray-1000"
					>
					</div>
					<div class="text-gray-500 dark:text-gray-400 flex items-center gap-x-[6px]">
						<div
							aria-hidden="true"
							class="w-1 aspect-square bg-emerald-500 animate-pulse rounded-full"
						>
						</div>
						Now
					</div>
				</li>
			</ul>
		</div>
	</div>
	<div class="flex flex-col md:flex-row gap-1 md:gap-9 mb-8">
		<span class="text-gray-500 dark:text-gray-400 md:w-40 shrink-0 text-xs md:text-base"
			>ProSource</span
		>
		<div class="flex-grow">
			<ul role="list" class="flex flex-col gap-4">
				<li class="flex w-full gap-x-1 items-center">
					<span>Product Designer</span>
					<div
						aria-hidden="true"
						class="h-px flex-grow bg-gradient-to-r from-gray-300 via-gray-300 to-gray-50 dark:from-white/10 dark:via-white/10 dark:to-gray-1000"
					>
					</div>
					<span class="text-gray-500 dark:text-gray-400">Oct 2020&ndash;Present</span>
				</li>
				<li class="flex w-full gap-x-1 items-center">
					<span>IT Coordinator</span>
					<div
						aria-hidden="true"
						class="h-px flex-grow bg-gradient-to-r from-gray-300 via-gray-300 to-gray-50 dark:from-white/10 dark:via-white/10 dark:to-gray-1000"
					>
					</div>
					<span class="text-gray-500 dark:text-gray-400">May 2016&ndash;Oct 2020</span>
				</li>
				<li class="flex w-full gap-x-1 items-center">
					<span>Intern</span>
					<div
						aria-hidden="true"
						class="h-px flex-grow bg-gradient-to-r from-gray-300 via-gray-300 to-gray-50 dark:from-white/10 dark:via-white/10 dark:to-gray-1000"
					>
					</div>
					<span class="text-gray-500 dark:text-gray-400">Dec 2014&ndash;Dec 2015</span>
				</li>
			</ul>
		</div>
	</div>
	<div class="text-center">
		<FancyButton href={cv}>Read my résumé</FancyButton>
	</div>
</section>
