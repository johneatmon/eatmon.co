---
import { Icon } from "astro-icon"
import type { HTMLAttributes } from "astro/types"
import { SOCIALS } from "../data/config"

interface Props extends HTMLAttributes<"footer"> {}

const { ...attrs } = Astro.props as Props
---

<footer {...attrs}>
	<!-- <div
		aria-hidden="true"
		class="h-px w-full bg-gradient-to-r from-gray-300 via-gray-300 to-gray-50 dark:from-white/10 dark:via-white/10 dark:to-gray-1000"
	>
	</div> -->
	<div class="mx-auto flex max-w-[700px] flex-col gap-8 px-4">
		<p class="text-sm text-gray-500 dark:text-gray-400">
			&copy; <span id="year"></span> John Eatmon &middot;
			<a
				href="/about/colophon"
				class="underline transition hover:text-gray-900 dark:hover:text-gray-50">Colophon</a
			>
		</p>
		<ul role="list" class="-ml-2 flex items-center sm:-ml-3">
			{
				SOCIALS.map(({ href, rel, label, icon }) => (
					<li>
						<a
							href={href}
							rel={rel}
							class="inline-block p-2 text-gray-500 transition hover:text-gray-900 dark:text-gray-400 dark:hover:text-gray-50 sm:p-3"
						>
							<Icon name={icon} title={label} class="h-5 w-5" />
						</a>
					</li>
				))
			}
		</ul>
	</div>
</footer>

<script is:inline>
	const year = (document.querySelector("#year").innerHTML = new Date().getFullYear())
</script>
