---
import type { HTMLAttributes } from "astro/types"
import { SOCIALS } from "../data/config"
// import { smartypants } from "smartypants"

interface Props extends HTMLAttributes<"header"> {}

const { ...attrs } = Astro.props as Props
---

<footer {...attrs}>
	<div
		class="dark:transparent mb-16 h-px bg-gradient-to-r from-transparent via-gray-300 to-transparent dark:from-transparent dark:via-white/10"
	>
	</div>
	<h2 class="mb-1 font-semibold">Interested in working together?</h2>
	<p class="mb-5 text-gray-500 dark:text-gray-400">
		Reach out to learn more about me and/or my work.
	</p>
	<ul role="list" class="flex gap-x-3">
		{
			SOCIALS.filter((x) => x.label === "Email" || x.label === "LinkedIn").map(
				({ href, label }) => (
					<li>
						<a
							href={href}
							class="inline-block font-medium text-gray-900 underline underline-offset-2 dark:text-white"
						>
							{label}
						</a>
					</li>
				),
			)
		}
	</ul>
</footer>
