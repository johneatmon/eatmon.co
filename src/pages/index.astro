---
import BlogSection from "@components/BlogSection.astro"
import ExperienceSection from "@components/ExperienceSection.astro"
import Hero from "@components/Hero.astro"
import ProjectSection from "@components/ProjectSection.astro"
import BaseLayout from "@layouts/BaseLayout.astro"
import { smarty } from "@lib/smartypants"

export const prerender = true

const title = "Web Artisan"
const description =
	"John Eatmon is a web designer, developer, and mountain climber based in Tacoma, WA."
---

<BaseLayout title={title} description={description}>
	<Hero class="pt-24 lg:pt-32 pb-9">
		<Fragment slot="title" set:html={smarty("Hi, I'm John Eatmon")} />
		I'm a web designer, developer, and <a
			href="https://www.wta.org/@@backpacks/scrnm-jmaeat"
			class="inline-block font-medium text-gray-900 underline underline-offset-2 dark:text-gray-50"
			>mountain climbing</a
		> enthusiast. Currently I'm a Digital Designer & Developer for
		<a
			href="/work/prosource"
			class="inline-block font-medium text-gray-900 underline underline-offset-2 dark:text-gray-50"
			>ProSource</a
		>.
	</Hero>
	<ProjectSection class="pt-16" featuredNumber={3}>Selected projects</ProjectSection>
	<ExperienceSection class="pt-16" />
	<BlogSection class="pt-16" featuredNumber={3}>Recent posts</BlogSection>
</BaseLayout>
