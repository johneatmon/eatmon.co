---
export const prerender = true

import ExperienceSection from "../components/ExperienceSection.astro"
import Hero from "../components/Hero.astro"
import MapSection from "../components/MapSection.astro"
import ProjectSection from "../components/ProjectSection.astro"
import BaseLayout from "../layouts/BaseLayout.astro"

const title = "Multidiscipline Designer, Developer & Creative"
const description = "I'm a product and web designer from living in Tacoma, WA."
---

<BaseLayout title={title} description={description}>
	<Hero class="pt-24 lg:pt-32 pb-9">
		<Fragment slot="title">John Eatmon</Fragment>
		Multidiscipline designer, developer & creative
	</Hero>
	<ProjectSection class="pt-16" featuredNumber={3}>Selected projects</ProjectSection>
	<ExperienceSection class="pt-16" />
	<MapSection class="pt-16">
		I'm fortunate to call Tacoma, WA my home. I've been working remotely here since summer 2021.
		Below are a few of my favorite places around town &mdash; if you're ever in the area, I hope you
		check them out!
	</MapSection>
</BaseLayout>
