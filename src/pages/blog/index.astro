---
import BlogSection from "@components/BlogSection.astro"
import Hero from "@components/Hero.astro"
import BaseLayout from "@layouts/BaseLayout.astro"
import { smarty } from "@lib/smartypants"

export const prerender = true

const title = "Writings by John"
const description = "I write about design, development, and technology."
---

<BaseLayout title={title} description={description}>
	<Hero class="pt-24 lg:pt-32 pb-9">
		<Fragment slot="title" set:html={smarty(title)} />
		<Fragment set:html={description} />
	</Hero>
	<BlogSection class="pt-16" />
</BaseLayout>
