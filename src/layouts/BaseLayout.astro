---
import Analytics from "../components/Analytics.astro"
import BaseHead, { Props as BaseHeadProps } from "../components/BaseHead.astro"
import Theme from "../components/Theme.astro"

interface Props extends Exclude<BaseHeadProps, "title"> {
	title?: string
}

import Footer from "../components/Footer.astro"
import Header from "../components/Header.astro"

const { ...attrs } = Astro.props as Props
---

<html lang="en" class="h-full transition">
	<head>
		<BaseHead {...attrs} />
		<Theme />
		<Analytics />
	</head>
	<body
		class="relative h-full bg-gray-50 text-gray-900 antialiased transition dark:bg-gray-1000 dark:text-gray-50 [&>footer]:sticky [&>footer]:top-[100vh]"
	>
		<Header
			class="bg-white/70 dark:bg-gray-1000/80 fixed isolate z-50 top-0 backdrop-blur-[20px] backdrop-saturate-[180%] w-full"
		/>
		<main class="relative mx-auto max-w-[700px] px-4">
			<slot />
		</main>
		<Footer class="relative pt-4 mt-16 md:mt-24 pb-16" />
	</body>
</html>
