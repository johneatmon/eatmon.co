{
  "cSpell.words": ["Astro", "frontmatter"],
  "cSpell.ignorePaths": [
    "package.json",
    "node_modules",
    "vscode-extension",
    ".git/objects",
    ".vscode",
    "pnpm-lock.yaml"
  ],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // "editor.rulers": [100],
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": ["source.organizeImports", "source.fixAll.eslint"],
  "emmet.includeLanguages": {
    "astro": "html"
  },
  "files.associations": {
    "*.mdx": "markdown"
  },
  "files.exclude": {
    "**/dist": true,
    "**/node_modules": true
  },
  "markdownlint.config": {
    "MD033": false // Since we use components in our markdown files, we disable this rule that prevents HTML
  },
  "prettier.documentSelectors": ["**/*.astro"],
  "search.exclude": {
    "**/dist": true
  }
}
